<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="Hello World!"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/flashcards"
        android:layout_width="169dp"
        android:layout_height="181dp"
        android:layout_marginEnd="8dp"
        android:background="@color/FlashColor"
        android:text="Flashcards"
        android:textAlignment="center"
        android:textStyle="bold"
        android:gravity="center"

        app:layout_constraintBaseline_toBaselineOf="@+id/lessons"
        app:layout_constraintEnd_toEndOf="@+id/header" />

    <TextView
        android:id="@+id/lessons"
        android:layout_width="169dp"
        android:layout_height="181dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:background="@color/LessonColor"
        android:text="Lessons"
        android:textAlignment="center"
        android:textStyle="bold"
        android:gravity="center"

        app:layout_constraintStart_toStartOf="@+id/header"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <TextView
        android:id="@+id/quiz"
        android:layout_width="169dp"
        android:layout_height="181dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@color/QuizColor"
        android:text="Quizzes"
        android:textAlignment="center"
        android:textStyle="bold"
        android:gravity="center"

        app:layout_constraintStart_toStartOf="@+id/header"
        app:layout_constraintTop_toBottomOf="@+id/lessons" />

    <TextView
        android:id="@+id/Youtube"
        android:layout_width="169dp"
        android:layout_height="181dp"
        android:layout_marginEnd="8dp"
        android:background="@color/YoutubeColor"
        android:text="Youtube"
        android:textAlignment="center"
        android:textStyle="bold"
        android:gravity="center"

        app:layout_constraintBaseline_toBaselineOf="@+id/quiz"
        app:layout_constraintEnd_toEndOf="@+id/header" />

</android.support.constraint.ConstraintLayout>