<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:columnWidth="320dp"
        android:columnCount="2"
        android:orientation="vertical"
        android:rowCount="2"
        android:stretchMode="columnWidth"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/holderRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Click and drag to sort these in the correct order:"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/movable1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="text one"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/movable2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="text two"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/movable3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="text three"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/movable4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="text four"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </android.support.v7.widget.LinearLayoutCompat>
</android.support.constraint.ConstraintLayout>